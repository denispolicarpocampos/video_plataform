    <%= javascript_include_tag 'admin/admin', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <%= render 'shared/admin/navbar' %>
    <div class="container-fluid">
      <div class="row">
        <%= render 'shared/admin/menu' %>
        <main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-4">
          <div class='content'>
            <div class="card">
              <%= yield %>
            </div>
          </div>
        </main>
      </div>
    </div> 
  </body>
</html>
